<script>
    fetch('http://localhost:3000/services/')
        .then(res => res.json())
        .then(response => {
            var serviceHtml = '';
            for (var i = 0; i < response.length; i++) {
                serviceHtml += ` <div class="card service-option"  style="width: 18rem;">`
                serviceHtml += `<div class="card-body">`
                serviceHtml += `<h4 id="serviceName" class="item-name card-title">${response[i].name} </h4>`;
                serviceHtml += `<h2 id="price" class="item-price"> $${response[i].price} </h2>`;
                serviceHtml += `<h5 id="time" class="item-time"> ${response[i].time} Mins </h5>`;
                serviceHtml += `</div>`;
                serviceHtml += `</div>`;
            }
            const serviceContainer = document.getElementById("services");
            serviceContainer.innerHTML = serviceHtml;
        })
        .catch(error => console.error('Error:', error));
</script>


