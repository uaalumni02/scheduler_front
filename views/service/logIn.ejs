    <br></br>
    <center>
    <form id="passwordForm" action="" method="GET">
            <h1 style="text-align: center">Enter Password</h1>
            <br></br>
        <div class="col-md-6">
            <div class="form-group">
                <label for="form_name" style="float: left">Password *</label>
                <input id="passwordInfo" type="password" class="form-control" placeholder="Please enter your Password *"
                    required="required" data-error="Password is required.">
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <button id="passwordBtn" type="submit" class="btn btn-secondary"> Submit</button>
    </form>
    </center>
    <div id="bookedAppts"></div>
</body>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const theForm = document.getElementById("passwordForm");
        theForm.addEventListener("submit", (event) => {
            event.preventDefault();
            const password = document.getElementById('passwordInfo').value
            fetch('http://localhost:3000/passwords/' + password, {
                method: "GET",
                headers: {
                    'Content-Type': 'application/json',
                },
            })
                .then(res => res.json())
                .then(response => {
                    if (response[0].password === password) {
                        document.getElementById('bookedAppts').style.display = "block";
                        document.getElementById('passwordForm').style.display = "none";
                    }
                }).catch(error => console.error('wrong password'));
            $('#passwordForm').get(0).reset();
        })
    })
</script>

<script>
    fetch('http://localhost:3000/appointments/')
        .then(res => res.json())
        .then(response => {
            var apptHtml = '';
            for (var i = 0; i < response.length; i++) {
                const timestamp = response[i].appointmentDate
                var date = moment.unix(timestamp).format("MM/DD/YYYY");
                apptHtml += `<h4 id="customerName">${response[i].name} </h4>`;
                apptHtml += `<h2 id="date"> ${date} </h2>`;
                apptHtml += `<h5 id="apptTime"> ${response[i].startTime} </h5>`;
            }
            const apptContainer = document.getElementById("bookedAppts");
            apptContainer.innerHTML = apptHtml;
        })
        .catch(error =>
            console.error('Error:', error));
</script>

